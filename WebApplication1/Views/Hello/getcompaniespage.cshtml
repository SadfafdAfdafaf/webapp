@using PagedList.Mvc;
@model PagedList.IPagedList<WebApplication1.Models.companiesmodel>


<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "getcompaniespage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>getcompaniespage</h2>

<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            Name
        </th>
        <th>
            CEO
        </th>
        <th>
            region
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CEO)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.region)
            </th>
        </tr>
    }

</table>

Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("getcompaniespage", new { page }))