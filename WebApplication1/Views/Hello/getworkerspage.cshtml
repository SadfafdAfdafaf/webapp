@using PagedList.Mvc;
@model PagedList.IPagedList<WebApplication1.Models.workermodel>

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "getworkerspages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>getworkerspages</h2>

<table class="table">
    <tr>
        <th>
            FIO
        </th>
        <th>
            Company
        </th>
        <th>
            Cost
        </th>
        <th>
            RegionOffice
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FIO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.RegionOffice)
            </th>
        </tr>
    }

</table>

Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("getworkerspage", new { page }))